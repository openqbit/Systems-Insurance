
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_System_User_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div style="background-color:#ff0000;" class="panel"></div>
        </div>
        <div class="col-md-4">
            <div style="background-color:#0026ff;" class="panel"></div>
        </div>
        <div class="col-md-6">
            <div style="background-color:#ff6a00;" class="panel"></div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row panel panel-info">
        <div class="panel-heading">
            Claim Area
        </div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <h5 class="col-sm-2 control-label">Policy NO</h5>
                    <div class="col-sm-10">
                        <input id="policyNo" type="number" class="form-control" onkeypress="runScript(event)"/>
                    </div>
                </div>
                <div class="cust-detail">
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">First Name</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Last Name</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Age</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Address</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Gender</h5>
                        <div class="col-sm-10">
                            <select class="form-control">
                                <option>-Select-</option>
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Email</h5>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Contact</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Claim Type</h5>
                        <div class="col-sm-10">
                            <select class="form-control" id="claimType">
                                <option>-Select-</option>
                                <option>Helth</option>
                                <option>Death</option>
                            </select>
                        </div>
                    </div>
                <div class="benifisher-detail">
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">First Name</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Last Name</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Age</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Address</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Gender</h5>
                        <div class="col-sm-10">
                            <select class="form-control">
                                <option>-Select-</option>
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Email</h5>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <h5 class="col-sm-2 control-label">Contact</h5>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                </div>

                </div>
            </form>
            
</div>
    </div>

    <style>
        .cust-detail{
            display:none;
        }
        .benifisher-detail{
            
            display:none;
        }
    </style>

    <script>
        
        $("#policyNo").keypress(function (e) {
            if (e.keyCode == 13) {
                alert("asds");
                $(".cust-detail").css("display", "inline-block");
            }
        });
        $("#claimType").keypress(function (e) {
            if (e.keyCode == 13) {
                $(".benifisher-detail").css("display", "inline-block");
            }
        });
    </script>

</div>
